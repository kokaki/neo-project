{% extends 'base.html.twig' %}
 
{% block body %}
<div class="container">
    <p>
        <a class="btn btn-secondary" href="{{ url('post_new') }}">New</a>
    </p>
 
    <table class="table">
        <tbody>
            {% for post in posts %}
            <tr>
                <th>
                    <a href="{{ url('post_show', {id: post.id}) }}">
                    {{ post.title }}
                    </a>
                </th>
                <td>
                    <a href="{{ url('post_update', {id: post.id}) }}">
                    [Edit]
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
